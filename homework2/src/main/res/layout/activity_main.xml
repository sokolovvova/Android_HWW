<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/button1_2"
        app:layout_constraintTop_toTopOf="@id/button1_2"
        android:text="@string/button1_1" />
    <Button
        android:id="@+id/button1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/button1_2" />
    <Button
        android:id="@+id/button2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/button2_2"
        app:layout_constraintTop_toBottomOf="@id/button1_2"
        android:text="@string/button2_1" />
    <Button
        android:id="@+id/button2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/button1_2"
        app:layout_constraintTop_toBottomOf="@id/button1_2"
        android:text="@string/button2_2" />
    <Button
        android:id="@+id/button2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/button2_2"
        app:layout_constraintTop_toBottomOf="@id/button1_2"
        android:text="@string/button2_3" />
    <Button
        android:id="@+id/button3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/button3_2"
        app:layout_constraintTop_toBottomOf="@id/button2_2"
        android:text="@string/button3_1" />
    <Button
        android:id="@+id/button3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/button2_2"
        app:layout_constraintTop_toBottomOf="@id/button2_2"
        android:text="@string/button3_2" />
    <Button
        android:id="@+id/button3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/button3_2"
        app:layout_constraintTop_toBottomOf="@id/button2_2"
        android:text="@string/button3_3" />
    <Button
        android:id="@+id/button4_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/button4_2"
        app:layout_constraintTop_toBottomOf="@id/button3_2"
        android:text="@string/button4_1" />
    <Button
        android:id="@+id/button4_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/button3_2"
        app:layout_constraintTop_toBottomOf="@id/button3_2"
        android:text="@string/button4_2" />
    <Button
        android:id="@+id/button4_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/button4_2"
        app:layout_constraintTop_toBottomOf="@id/button3_2"
        android:text="@string/button4_3" />
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/button4_2"
        app:layout_constraintTop_toBottomOf="@id/button4_2"
        android:text="@string/button5" />
</androidx.constraintlayout.widget.ConstraintLayout>